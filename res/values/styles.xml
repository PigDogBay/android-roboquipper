<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="SoundButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/button_sound_selector</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        
    </style>
    <style name="SoundButtonLarge">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:background">@drawable/button_sound_selector</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        
    </style>
    <style name="ConsoleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0f0</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">1dp</item>
        </style>
    <style name="ConsoleTextViewLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0f0</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">1dp</item>
        </style>
    
</resources>